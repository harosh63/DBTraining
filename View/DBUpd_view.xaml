<Window x:Class="DBTraining.View.DBUpd_view"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBTraining.View"
        
        mc:Ignorable="d"
        Title="Обновить пользователя" Height="283" Width="278" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="22"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label Content="ФИО"/>
            <TextBox x:Name="textFio" MaxLength="40" />
            <Label Content="Возраст"/>
            <TextBox x:Name="textAge" PreviewTextInput="textAge_PreviewTextInput" MaxLength="3"/>
            <Label Content="Адрес"/>
            <TextBox x:Name="textAdress" MaxLength="40"/>
            <Label Content="Дата"/>
            <DatePicker Name="textDatetime" SelectedDateFormat="Short"/>
        </StackPanel>
        <Button Content="ОК" Margin="50,181,132,16" Click="OKButton_Click" IsDefault="True"/>
        <Button Content="Отмена" Margin="132,181,50,16" IsCancel="True"/>
    </Grid>
</Window>
